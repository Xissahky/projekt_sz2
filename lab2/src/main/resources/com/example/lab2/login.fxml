<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox alignment="CENTER" prefHeight="534.0" prefWidth="437.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab2.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <Label text="Welcome to the App" styleClass="header-label"/>
        <VBox prefHeight="200.0" prefWidth="300.0" spacing="10.0" alignment="CENTER">
            <children>
                <Label text="Login:" />
                <TextField fx:id="loginField" prefHeight="22.0" prefWidth="300.0" />
                <Label text="Password:" />
                <PasswordField fx:id="passwordField" prefHeight="22.0" prefWidth="300.0" />
                <Button text="Login" onAction="#handleLogin" styleClass="login-button"/>
                <Button text="Register" onAction="#goToRegister" styleClass="login-button"/>
                <Label fx:id="errorMessage" text="" styleClass="error-message"/>
            </children>
        </VBox>
    </children>
</VBox>
