<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab2.BattleshipController" xmlns="http://javafx.com/javafx/17.0.2-ea">
    <top>
        <Label text="Battleship" styleClass="header-label" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <GridPane fx:id="playerGrid" alignment="CENTER" hgap="2" vgap="2" styleClass="game-grid"/>
                <GridPane fx:id="enemyGrid" alignment="CENTER" hgap="2" vgap="2" styleClass="game-grid"/>
            </children>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button text="Back to Menu" onAction="#backToMenu" styleClass="game-button"/>
                <Button text="View Rules" onAction="#viewRules" styleClass="game-button"/>
                <Label fx:id="statusLabel" text="Your turn" styleClass="status-label"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
