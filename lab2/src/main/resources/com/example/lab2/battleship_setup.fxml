<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab2.BattleshipSetupController" xmlns="http://javafx.com/javafx/17.0.2-ea">
    <top>
        <Label text="Battleship Setup" styleClass="header-label" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <GridPane fx:id="playerGrid" alignment="CENTER" hgap="2" vgap="2" styleClass="game-grid">
            <!-- Populate buttons programmatically -->
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button text="Start Game" onAction="#startGame" styleClass="game-button"/>
                <Label fx:id="statusLabel" text="Place your ships" styleClass="status-label"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
